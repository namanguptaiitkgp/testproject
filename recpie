	recepie_object master_list[100];
	cout << "To view recepies press 1 \n To add recpies press 2\n To edit recepie press 3\n: " <<endl;	
	cin >> inputc;
	switch(

		case(1):
		  print_recepie(NO_OF_recepie);

		case(2):
	
		  master_list(NO_OF_recepie).new_recepie();

	
		cae(3):
			cout << "Enter recepie no." <<endl;
			int editno;
			cin >> editno;
			master_list(editno)=master_list(editno).edit_recepie(master_list(editno));

		default:

		     cout << "Wrong input\n: " <<endl;	
	
	)

	void print_recepie(int k){

	
	int j;
	for(j=0;j<k;j++){
	cout << j <<endl;
	cout << master_list[j].recepie_name() <<endl;
	
	}

	
	
